profile: basic

warn_list: 
  - yaml[truthy]          # yes/no/on/off вместо true/false
  - risky-shell-pipe      # использование pipe в shell командах
  - experimental

skip_list:            # полностью пропустить проверки
  - fqcn-builtins       # не требует ansible.builtin перед каждым модулем
  - no-changed-when      # не требует changed_when: false для команд
  - command-instead-of-module # не ругается, если используешь command вместо модуля

parseable: true